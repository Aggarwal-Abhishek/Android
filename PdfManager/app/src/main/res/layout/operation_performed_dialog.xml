<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sample Text, Sample Text, Sample Text, Sample Text, "
        android:textSize="15dp"
        android:id="@+id/operation_performed_dialog_title"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/operation_performed_dialog_button_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/operation_performed_dialog_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="View PDF" />

    <Button
        android:id="@+id/operation_performed_dialog_button_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/operation_performed_dialog_button_view"
        android:layout_alignBottom="@+id/operation_performed_dialog_button_view"
        android:layout_alignParentStart="true"
        android:text="Exit" />

    <Button
        android:id="@+id/operation_performed_dialog_button_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/operation_performed_dialog_button_exit"
        android:layout_alignBottom="@+id/operation_performed_dialog_button_exit"
        android:layout_alignParentEnd="true"
        android:text="Cancel" />


</RelativeLayout>