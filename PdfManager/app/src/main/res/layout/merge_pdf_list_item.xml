<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="100dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:elevation="10dp"
        android:background="@color/list_background">

        <TextView
            android:id="@+id/merge_pdf_document_id"
            android:layout_width="50dp"
            android:layout_height="25dp" />

        <ImageView
            android:id="@+id/merge_pdf_reorder_handle_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:src="@drawable/reorder_icon" />

        <TextView
            android:id="@+id/merge_pdf_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/merge_pdf_reorder_handle_btn"
            android:layout_toStartOf="@id/merge_pdf_close_btn"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="15dp"
            android:textSize="20dp"
            android:lineSpacingExtra="5dp"
            />

        <Button
            android:id="@+id/merge_pdf_close_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/close_icon"/>



    </RelativeLayout>


</RelativeLayout>