<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="150dp">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:background="@color/list_background"
       android:layout_marginBottom="20dp"
       android:elevation="10dp">

       <TextView
           android:id="@+id/images_to_pdf_txt_view"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:visibility="invisible"/>

       <ImageView
           android:layout_width="wrap_content"
           android:layout_height="50dp"
           android:background="@drawable/reorder_icon"
           android:layout_centerVertical="true"
           android:id="@+id/images_to_pdf_drag_handle_image_view" />

       <ImageView
           android:id="@+id/images_to_pdf_image_view"
           android:layout_width="125dp"
           android:layout_height="125dp"
           android:layout_centerVertical="true"
           android:layout_marginStart="20dp"
           android:layout_toEndOf="@+id/images_to_pdf_drag_handle_image_view" />

       <Button
           android:id="@+id/images_to_pdf_edit_button"
           android:layout_width="wrap_content"
           android:layout_height="50dp"
           android:layout_alignBottom="@+id/images_to_pdf_close_btn"
           android:layout_marginEnd="20dp"
           android:layout_toStartOf="@+id/images_to_pdf_close_btn"
           android:text="EDIT" />

       <Button
           android:id="@+id/images_to_pdf_close_btn"
           android:layout_width="50dp"
           android:layout_height="50dp"
           android:layout_alignParentEnd="true"
           android:layout_centerVertical="true"
           android:background="@drawable/close_icon" />


   </RelativeLayout>

</RelativeLayout>